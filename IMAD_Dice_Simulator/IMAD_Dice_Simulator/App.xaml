<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IMAD_Dice_Simulator"
             x:Class="IMAD_Dice_Simulator.App">
    <Application.Resources>
        <Color x:Key="Primary">#7c203a</Color>
        <Color x:Key="Secondary">#f85959</Color>
        <Color x:Key="Accent">#ff9f68</Color>
        <Color x:Key="Light">#feff89</Color>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource Light}"/>
        </Style>
    </Application.Resources>
</Application>
